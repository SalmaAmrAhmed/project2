#JSGF V1.0;

/**
 * JSGF Grammar for Hello World example
 */

grammar hello;

public <all> = <size> | <confirm> | <toppings> | <crust> | <thickness>;
<size> = (big | medium | regular | small);
<toppings> = (cheese | mushrooms | chicken | seafood | pepperoni);
<crust> = (stuffed | pan);
<thickness> = (thick | thin);
<confirm> = (yes | no);

